<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<div class='form-wrap'>
  <%# オリアプロゴ %>
  <div class="form-icon">
    <%= image_tag "originalapp-logo", class:"original-logo" %>
  </div>
  <%# 新規登録画面タイトル %>
  <div class='form-header'>
    <h3 class='form-header-text'>
      ユーザー登録
    </h3>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレスを入力", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上のパスワード" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"ユーザーの名前を入力", maxlength:"40" %>
    </div>
  </div>

  <div class='register-btn'>
    <%= f.submit "ユーザー登録する", class:"register-lightblue-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
