<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<div class='form-wrap'>
  <%# オリアプロゴ %>
  <div class="form-icon">
    <%= image_tag "originalapp-logo", class:"original-logo" %>
  </div>
  <%# ログイン画面タイトル %>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Welcome!
    </h1>
  </div>
  <%# ログイン情報記入欄 %>
  <div class="form-group">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレスを入力", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class:"input-default", id:"password", placeholder: "パスワードを入力" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
  <% end %>
  <%# 送信ボタン %>
  <div class='login-btn'>
    <%= f.submit "ログイン", class:"login-lightblue-btn" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
