<div class="main">
  <header class="header-top">
    <%= image_tag "header-line.png", class:"header-line" %>
  </header>

  <div class="main-image">
    <%= image_tag "top-image.png", class:"top-image" %>
  </div>
  <%# マイページ/ログイン/新規登録 %>
  <div class="main-top">
    <div class="nav">
      <ul class="user-list">
        <%if user_signed_in? %>
          <li><%= link_to "マイページ", "#", class: 'mypage' %></li>/
          <li><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %></li>
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path, class: "login" %></li>/
          <li><%= link_to "新規登録", new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
    <%# メイン機能 %>
    <div class="top-page-main">
      <ul class="main-contents">
        <li><%= link_to "スケジュールを立てる", itineraries_path, class: "itinerary-content" %></li><br><br>
        <li><%= link_to "行きたい場所リスト", lists_path, class: "list-content" %></li><br><br>
        <li><%= link_to "持ち物リスト", prepares_path, class: "link-content" %></li><br><br>
        <li><%= link_to "お土産リスト", souvenirs_path, class: "link-content" %></li><br><br>
        <li><%= link_to "フォトブック", "#", class: "link-content" %></li><br><br>
      </ul>
    </div>
  </div>

  <footer class="footer-top">
    <div class="footer">©︎Have a nice trip!</div>
  </footer>
</div>