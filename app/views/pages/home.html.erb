<%= render "shared/header" %>
<div class="main">

  <%# マイページ/ログイン/新規登録 %>
  <div class="nav">
    <ul class="user-list">
      <%if user_signed_in? %>
        <li><%= link_to "マイページ", "#", class: 'mypage' %></li>
        <li><%= link_to "ログイン", destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %></li>
      <% else %>
        <li><%= link_to "ログイン", new_user_session_path, class: "login" %></li>
        <li><%= link_to "新規登録", new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</div>