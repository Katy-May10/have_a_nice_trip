<%= render "shared/header"%>

<div class="main">
  <div class="list-title">
    行きたい場所リストを追加する
  </div>
  <%= form_with model: @list, local: true do |f| %>
    <div class="fill-in-form">
      <div class="list-form">
        行きたい場所は？
        <%= f.text_area :sightseeing, class:"list-text", id:"sightseeing", placeholder:"例）草津温泉" %>
      </div>
      <div class="list-button">
        <%= f.submit "作成する", class:"save-btn"%>
      </div>
    </div>
  <% end %>
</div>
