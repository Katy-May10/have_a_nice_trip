<%= render "shared/header"%>
<div class="main">
  <div class="sightseeing-title">
    旅行計画一覧
  </div>
    <%= link_to new_list_path, class: "add-list" do %>
      <i class="fa-solid fa-plus">新規リスト作成</i>
    <% end %>

    <ul class="sightseeing-lists">
      <% @lists.each do |list| %>
      <li class="list">
        <%= link_to list_path(list) do %>
        <div class="list-info">
          <div class="sightseeing-info">
            <i class="fa-regular fa-note-sticky"><%= list.sightseeing %></i>
          </div>
        <% end %>
      </li>
      <% end %>
    </ul>
</div>